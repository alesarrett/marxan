citHeader("To cite marxan in publications use:")

meta <- packageDescription("marxan")
year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)
url <- meta$URL

citEntry(entry = "incollection",
	author=personList(as.person("Ball I.R."),as.person("Possingham H.P."),as.person("Watts M.E.")),
	title="Marxan and relatives: Software for spatial conservation prioritisation",
	year="2009",
	booktitle="Spatial conservation prioritisation: Quantitative methods and computational tools",
	editor=personList(as.person("Moilanen A.R."),as.person("Wilson K.A."),as.person("Possingham H.P.")),
	chapter="Chaper 14: Marxan and relatives: Software for spatial conservation prioritisation",
	pages="185-195",
	publisher="Oxford University Press",
	address="Oxford, UK",
	textVersion = "Ball, I.R., Possingham, H.P., and Watts, M.E. 2009. Marxan and relatives: Software for spatial conservation prioritisation. Chapter 14: Pages 185-195 in Spatial conservation prioritisation: Quantitative methods and computational tools. Eds Moilanen, A., Wilson, K.A., Possingham H.P. Oxford University Press, Oxford, UK."
)

citEntry(entry="Manual",
	title="{marxan}: Decision support tools for reserve selection in R using Marxan",	
	author=personList(as.person("Hanson J.O."),as.person("Watts M.E.")),
	year=year,
	note=note,
	url=url,
	textVersion = paste0("Hanson, J.O., Watts, M.E. ",year,". marxan: Decision support tools for reserve selection in R using Marxan.",note,". URL ",url,".")
)

